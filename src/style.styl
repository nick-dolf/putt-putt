html
  font-size: 62.5%
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body
  min-width: 320px
  font-family: Verdana, Geneva, Tahoma, sans-serif
  font-size: 1.6rem
  background: #EEE

main
  max-width: 300px
  margin: auto

  header
    display: flex
    justify-content: space-between
    align-items: center

  #count
    font-size: 2rem
    font-weight: bold

#canvas
  background: #C1E1C1

button
  margin: 12px auto
  display: block
  border-radius: 12px
  padding: 8px 24px